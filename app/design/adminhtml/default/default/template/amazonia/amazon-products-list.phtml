                </a>
                <a class="add2jobs" href="">
                    <i class="glyphicon glyphicon-plus"></i>
                    add to queue
                </a>
            </td>
        </tr>
    <?php endif; ?>

    <?php $isFirstRow = false; ?>

<?php endforeach; ?>