                        <?php foreach ($this->getAttributeSets() as $attributeSet) : ?>
                            <option value="<?php echo $attributeSet->getId(); ?>">
                                <?php echo $attributeSet->getAttributeSetName(); ?>
                            </option>
                        <?php endforeach; ?>
                    </select>

                    <button class="accept-type btn btn-warning btn-xs pull-right">
