<?xml version="1.0"?>
<config>
    <modules>
        <Colibo_Amazonia>
            <version>0.1.0</version>
        </Colibo_Amazonia>
    </modules>
    <global>
        <helpers>
            <amazonia>
                <class>Colibo_Amazonia_Helper</class>
            </amazonia>
        </helpers>
        <blocks>
            <amazonia>
                <class>Colibo_Amazonia_Block</class>
            </amazonia>
        </blocks>
    </global>
    <admin>
        <routers>
            <amazonia>
                <use>admin</use>
                <args>
                    <module>Colibo_Amazonia</module>
                    <frontName>amazon</frontName>
                </args>
            </amazonia>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <amazonia module="amazonia">
                <title>Amazon</title>
                <sort_order>0</sort_order>
                <children>
                    <products module="amazonia">
                        <title>Product Import</title>
                        <sort_order>0</sort_order>
                        <action>amazon/adminhtml_products</action>
                    </products>
                </children>
            </amazonia>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <amazonia translate="title" module="amazonia">
                            <title>Amazon</title>
                            <sort_order>1000</sort_order>
                            <children>
                                <products translate="title">
                                    <title>Products Import</title>
                                </products>
                            </children>
                        </amazonia>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <amazonia>
                    <file>amazonia.xml</file>
                </amazonia>
            </updates>
        </layout>
    </adminhtml>
</config> 